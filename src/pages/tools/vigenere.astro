---
import Layout from '../../layouts/Layout.astro';
import VigenereView from '../../components/tools/Vigenere.svelte';
---

<Layout 
  title="Vigenère Cipher — Polyalphabetic Cryptography"
  description="Master the 'le chiffre indéchiffrable'. The Vigenère cipher uses a keyword to provide complex polyalphabetic encryption."
>
  <div class="max-w-2xl mx-auto px-5 py-12 md:py-20 text-center">
    <div class="mb-12">
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">Vigenère <span class="text-emerald-500">Square.</span></h1>
      <p class="text-zinc-500 dark:text-zinc-400 text-sm md:text-base leading-relaxed">
        Advanced substitution using a series of interwoven Caesar ciphers based on the letters of a keyword.
      </p>
    </div>

    <div class="card p-8">
      <VigenereView client:load />
    </div>
  </div>
</Layout>
