---
import Layout from '../../layouts/Layout.astro';
import TimeCapsuleView from '../../components/tools/TimeCapsule.svelte';
import { getTranslations, t, type Locale } from '../../lib/i18n';

const locale = (Astro.currentLocale ?? 'en') as Locale;
const dict = getTranslations(locale);
---

<Layout 
  title={t(dict, 'tools.timeCapsule.meta.title')}
  description={t(dict, 'tools.timeCapsule.meta.description')}
>
  <div class="max-w-2xl mx-auto px-5 py-12 md:py-20 text-center space-y-8">
    <div class="space-y-3" data-aos data-aos-delay="0">
      <h1 class="text-3xl md:text-4xl font-black tracking-tight">{t(dict, 'tools.timeCapsule.h1')} <span class="text-emerald-500">{t(dict, 'tools.timeCapsule.h1Highlight')}</span></h1>
      <p class="text-zinc-500 dark:text-zinc-400 text-sm md:text-base leading-relaxed max-w-xl mx-auto">{t(dict, 'tools.timeCapsule.subtitle')}</p>
    </div>
    <div class="card p-6 md:p-8" data-aos data-aos-delay="80">
      <TimeCapsuleView client:load locale={locale} />
    </div>
    <p class="text-[11px] text-zinc-400 max-w-md mx-auto" data-aos data-aos-delay="120">{t(dict, 'tools.timeCapsule.footnote')}</p>
    <div class="mt-8 text-left space-y-4" data-aos data-aos-delay="160">
      <h3 class="text-xs font-bold uppercase tracking-widest text-zinc-400">{t(dict, 'tools.timeCapsule.info.title')}</h3>
      <p class="text-xs text-zinc-500 leading-relaxed">{t(dict, 'tools.timeCapsule.info.text')}</p>
    </div>
  </div>
</Layout>
