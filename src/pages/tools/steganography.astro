---
import Layout from '../../layouts/Layout.astro';
import SteganographyView from '../../components/tools/Steganography.svelte';
import { getTranslations, t, type Locale } from '../../lib/i18n';

const locale = (Astro.currentLocale ?? 'en') as Locale;
const dict = getTranslations(locale);
---

<Layout 
  title={t(dict, 'tools.steganography.meta.title')}
  description={t(dict, 'tools.steganography.meta.description')}
>
  <div class="max-w-4xl mx-auto px-5 py-12 md:py-20 text-center">
    <div class="mb-12">
      <h1 class="text-3xl md:text-4xl font-black italic tracking-tighter mb-4">{t(dict, 'tools.steganography.h1')} <span class="text-emerald-500">{t(dict, 'tools.steganography.h1Highlight')}</span></h1>
      <p class="text-zinc-500 dark:text-zinc-400 text-sm md:text-base leading-relaxed">{t(dict, 'tools.steganography.subtitle')}</p>
    </div>
    <div class="card p-4 md:p-10">
      <SteganographyView client:load locale={locale} />
    </div>
    <div class="mt-12 text-left space-y-4">
      <h3 class="text-xs font-bold uppercase tracking-widest text-zinc-400">{t(dict, 'tools.steganography.info.title')}</h3>
      <div class="grid md:grid-cols-2 gap-6 text-xs text-zinc-500 leading-relaxed">
        <p><strong class="text-zinc-700 dark:text-zinc-300">{t(dict, 'tools.steganography.info1.title')}</strong> {t(dict, 'tools.steganography.info1.text')}</p>
        <p><strong class="text-zinc-700 dark:text-zinc-300">{t(dict, 'tools.steganography.info2.title')}</strong> {t(dict, 'tools.steganography.info2.text')}</p>
      </div>
    </div>
  </div>
</Layout>
