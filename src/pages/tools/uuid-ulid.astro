---
import Layout from '../../layouts/Layout.astro';
import UUIDULIDView from '../../components/tools/UUIDULID.svelte';
import { getTranslations, t, type Locale } from '../../lib/i18n';

const locale = (Astro.currentLocale ?? 'en') as Locale;
const dict = getTranslations(locale);
---

<Layout 
  title={t(dict, 'tools.uuidUlid.meta.title')}
  description={t(dict, 'tools.uuidUlid.meta.description')}
>
  <div class="max-w-2xl mx-auto px-5 py-12 md:py-20 text-center">
    <div class="mb-12">
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">{t(dict, 'tools.uuidUlid.h1')} <span class="text-emerald-500">{t(dict, 'tools.uuidUlid.h1Highlight')}</span></h1>
      <p class="text-zinc-500 dark:text-zinc-400 text-sm md:text-base leading-relaxed">{t(dict, 'tools.uuidUlid.subtitle')}</p>
    </div>
    <div class="card p-8">
      <UUIDULIDView client:load locale={locale} />
    </div>
    <div class="mt-12 grid md:grid-cols-2 gap-6 text-left">
      <div class="p-5 bg-white dark:bg-zinc-900/50 border border-zinc-100 dark:border-zinc-800 rounded-xl">
        <h4 class="text-xs font-bold uppercase mb-2">{t(dict, 'tools.uuidUlid.info1.title')}</h4>
        <p class="text-[11px] text-zinc-500 leading-relaxed">{t(dict, 'tools.uuidUlid.info1.text')}</p>
      </div>
      <div class="p-5 bg-white dark:bg-zinc-900/50 border border-zinc-100 dark:border-zinc-800 rounded-xl">
        <h4 class="text-xs font-bold uppercase mb-2">{t(dict, 'tools.uuidUlid.info2.title')}</h4>
        <p class="text-[11px] text-zinc-500 leading-relaxed">{t(dict, 'tools.uuidUlid.info2.text')}</p>
      </div>
    </div>
  </div>
</Layout>
