---
import Layout from '../layouts/Layout.astro';
import { getTranslations, t, type Locale } from '../lib/i18n';

const locale = (Astro.currentLocale ?? 'en') as Locale;
const dict = getTranslations(locale);
---

<Layout 
  title={t(dict, '404.meta.title')}
  description={t(dict, '404.meta.description')}
>
  <div class="min-h-[70vh] flex flex-col items-center justify-center px-5 text-center">
    <div class="relative mb-8 md:mb-12">
      <img src="/encrypt_confused.svg" alt="" class="w-full max-w-[90px] md:max-w-sm h-auto drop-shadow-2xl transition-all duration-700" />
    </div>
    <div class="max-w-md mx-auto">
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">
        {t(dict, '404.h1')} <span class="text-emerald-600 dark:text-emerald-400">{t(dict, '404.h1Highlight')}</span>
      </h1>
      <p class="text-zinc-500 dark:text-zinc-400 text-base md:text-lg leading-relaxed mb-10">{t(dict, '404.text')}</p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/" class="btn">{t(dict, '404.ctaPrimary')}</a>
        <a href="https://github.com/danielsebesta/encrypt.click/issues" target="_blank" rel="noopener noreferrer" class="btn-outline">{t(dict, '404.ctaSecondary')}</a>
      </div>
    </div>
    <div class="mt-20 flex gap-4 opacity-20 pointer-events-none font-mono text-[10px] tracking-widest uppercase">
      <div>{t(dict, '404.errCode')}</div>
      <div class="w-1 h-3 bg-zinc-400"></div>
      <div>{t(dict, '404.errLabel')}</div>
    </div>
  </div>
</Layout>
